@import "../common/index.wxss";
page,.page{
  background-color:#f7f7f7;
  width:100%;
  height:100%;
  overflow: hidden;

}

.mindhead{

  width:92%;
  margin:0 auto;
  text-align:center;
  color:#333;
  font-weight: 400;
  font-size:40rpx;
  background: #fff;
  border-radius:20rpx;
  box-shadow:1px 2px 10px rgba(0,0,0,.1);
  margin-top:20rpx;
  margin-bottom:20rpx;
  padding-top:60rpx;
  padding-bottom:60rpx;
  letter-spacing: 0.02
}
.mindhead image{
  width:180rpx;
  height:180rpx;
  margin:0 auto;
  margin-bottom:30rpx;
  border-radius:50%; 
}
/*单元列表*/

.unitlistborder{
  display: flex;
  justify-content: space-between;
  width:92%;
  margin:0 auto;
  height:140rpx;
  line-height:14rpx;
  box-shadow: 1px 2px 10px rgba(0,0,0,.1);
  border-radius:20rpx;
  margin-bottom:30rpx;
  background-color: #fff;
}
.unitlistborder_right image{
  width:34rpx;
  height:34rpx;
}
.unitlistborder_left,.unitlistborder_right{
  line-height:140rpx;
}
.unitlistborder_left{
  padding-left:48rpx;
  color:#333;
}
.unitlistborder_right{
   padding-right:48rpx;
}
