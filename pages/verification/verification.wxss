.page__hd {
    padding: 30px 0px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}
.title-text{
  color:#A3A3A3;
  font-size: 12px;
}
.content{
 display: flex; 
 justify-content: space-around; 
 align-items: center; 
 margin-top: 30px;
 margin-bottom: 15px;
 
}
.content-bottom{
  text-align: right;
  padding-right: 30px;
}
.content-text{
  font-size: 14px;
  color:#A3A3A3;
  background-color: transparent;
}
.iptbox{ 
 width: 80rpx; 
 height: 80rpx; 
 border:1rpx solid #ddd; 
 border-radius: 20rpx; 
 display: flex; 
 justify-content: center; 
 align-items: center; 
 text-align: center; 
} 
.sel-iptbox{
  width: 80rpx; 
  height: 80rpx;
  border-radius: 20rpx; 
  display: flex; 
  justify-content: center; 
  align-items: center; 
  text-align: center; 
  border:1rpx solid #FFA500;
}
.ipt{ 
 width: 0; 
 height: 0; 
} 
.btn-area{ 
 width: 80%; 
 background-color: orange; 
 color:white; 
}
.tip-error{
  text-align: center;
}
.tip-error-text{
  display: inline-block;
  padding:5px 10px;
  font-size: 12px;
  background-color: #999999;
  color: #D3D3D3;
  border-radius: 20px;
}
.next-btn{
  background-color: #FFD744;
  border-radius:30px;
  color:#333;
  font-weight: 500;
  border:1px solid #DFDFDF;
}