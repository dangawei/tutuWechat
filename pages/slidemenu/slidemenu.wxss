
page,.page{
  width:100%;
  height:100%;
  overflow: hidden;
  padding-right: 0px;
  padding-left: 0px;
}
.text-center{
  text-align:center;
}
.tab{
border-bottom: 1px solid #f3f3f3;
overflow: hidden;
}
.tab>view{
width: 33.33%;
text-align: center;
float: left;
height: 44px;
line-height: 44px;
font-size: 14px;
}
.default{
color: #000;
}
.red{
color: #ea3e39;
border-bottom: 1px solid #ea3e39;
}
.show{
display:block;
text-align:center;
height: 100%;
}
.hidden{
display:none;
text-align:center;
height: 100%;
}

.tab_l{
width: 25%;
float: left;
font-size: 14px;
border-right: 1px solid #f3f3f3;
height: 100%;
box-sizing: border-box;
padding:30px 0px;
overflow-y: scroll;
/* box-shadow:3px 0px 10px rgba(0,0,0,.5); */
}
.tab_r{
width: 75%;
float: left;
font-size: 14px;
background-color: #f5f5f5;
height:100%;
overflow-y: scroll;
padding-top:40rpx;
}
.tab_l view{
line-height: 64rpx;

}
.nav_left_items{
height: 64rpx;
line-height: 64rpx;
color:#a2a2a2;
font-size: 14px;
}
.nav_left_items.active{

width:148rpx;
height:64rpx;
line-height:64rpx;

background-image:url("https://www.chengxuyuantoutiao.com/a/addsubject1.png");
background-repeat: no-repeat;
background-size:100%;
background-position: center center;
color: #333333;
border-bottom: none;
margin:0 auto;
}

.nav_right_items{
/*浮动向左*/
float: left;
/*每个item设置宽度是33.33%*/
width: 50%;
height: auto;
text-align: center;
}
.nav_right_items image{
width: 211rpx;
height: 236rpx;
margin-top: 8px;position: relative;
background-color:transparent ;
}
.nav_right_items image text.sectionpart{

  position: absolute;
  bottom:20rpx;
  left:50%;
  color:#fff;
  font-size:28rpx;
  margin-left:-9px;

}
.tab_r text.sectionpartTitle{
  position: absolute;
  bottom:65rpx;
  left:50%;
  color:#333;
  font-size:26rpx;
  margin-left:-14px;
}
.nav_right_items text{
/*给text设成块级元素*/
display: block;
margin-top: 20rpx;
margin-bottom:40rpx;
font-size: 14px;
color: #333;
/*设置文字溢出部分为...*/
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;
}










