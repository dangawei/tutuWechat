<view class="page">
  <view class="page__hd">
    <view class="page__title">设置密码</view>
  </view>
  <view class="weui-cells weui-cells_after-title">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
                <!-- <view class="weui-label">手机号</view> -->
                <image src='http://img.tutukids.com/group1/M00/00/0A/组 9@2x.png' style="width: 20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">
                <input type='number' class="weui-input pl15" placeholder="请设置密码" bindinput="bindKeyInput" value='{{passwordValue}}' password="{{true}}"/>
            </view>
            <view class="weui-cell__ft mr15">
              <image src='http://img.tutukids.com/group1/M00/00/0A/组 21@2x.png' style="width: 20px; height: 20px;" bindtap='cancelPhone'></image>
              <!-- <icon type="cancel" size="22" color="#E64340" bindtap='cancelPhone'></icon> -->
            </view>
        </view>
    </view>
  </view>
  <view class="mg30">
    <button class="next-btn" size='default' disabled="{{false}}"  bindtap="nextBtn">完成</button>
  </view>
  <!-- <view wx:if="{{isError}}" class='tip-error'>
    <text class='tip-error-text'>验证码错误</text>
  </view> -->
</view>