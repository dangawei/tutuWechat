/*选择正确为绿色  */
.greenbordersmall{
  border:6rpx solid #09d034;
}
/*绿色一直闪的状态  */
.greenbordersmallbili{
 -webkit-animation: twinklinggreen 1s infinite ease-in-out;
-o-animation: twinklinggreen 1s infinite  ease-in-out;
-ms-animation: twinklinggreen 1s infinite  ease-in-out;
-moz-animation: twinklinggreen 1s infinite  ease-in-out;

}
@-webkit-keyframes twinklinggreen{ 
0%{ 
opacity: 0.5; 
border:6rpx solid #09d034;
} 
100%{ 
opacity: 1; 
border:6rpx solid #09d034;
} 
} 
@keyframes twinklinggreen{ 
0%{ 
opacity: 0.5; 
border:6rpx solid #09d034;
} 
100%{ 
opacity: 1; 
border:6rpx solid #09d034;
} 

}


/*红色闪两下的状态*/


.redbordersmall{ 
-webkit-animation: twinklingred 1s 3 ease-in-out;
-o-animation: twinklingred 1s 3  ease-in-out;
-ms-animation: twinklingred 1s 3  ease-in-out;
-moz-animation: twinklingred 1s 3  ease-in-out;

} 
.animated{ 
-webkit-animation-duration: 1s; 
-o-animation-duration: 1s; 
-ms-animation-duration: 1s; 
-moz-animation-duration: 1s; 
animation-duration: 1s; 
-webkit-animation-fill-mode: both; 
animation-fill-mode: both 
} 
@-webkit-keyframes twinklingred{ 
0%{ 
opacity: 0.5; 
border:6rpx solid #e82327;
} 
100%{ 
opacity: 1; 
border:6rpx solid #e82327;
} 
} 
@keyframes twinklingred{ 
0%{ 
opacity: 0.5; 
border:6rpx solid #e82327;
} 
100%{ 
opacity: 1; 
border:6rpx solid #e82327;
} 

}
@keyframes twinklingred{ 
100%{ 
opacity: 1; 
border:6rpx solid #e82327;
} 
100%{ 
opacity: 0; 
border:6rpx solid #e82327;
} 

}
